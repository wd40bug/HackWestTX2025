@rendermode InteractiveServer
@code {
    [Parameter]
    [EditorRequired]
    public int ExtraYs { get; set; }

    [Parameter]
    [EditorRequired]
    public double yPerHey {get; set;}
}

<div class="extra-y-container">
    <h2 class="extra-y-text"><b><q class="heyyyyyy">@hey()</q></b> was the average extended hey</h2>
</div>

<style>
    .extra-y-container {
        align-items: center;
        justify-content: center;
        height: 100%;
        display: flex;
    }
</style>

@code {
    private string hey()
    {   
        if(yPerHey > 10) return "Heyyyyyyyyyy...";
        else return "He" + new string('y', Math.Max(1, (int)yPerHey));
    }
}
